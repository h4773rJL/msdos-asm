CLS MACRO
	MOV AH,00
	MOV AL,03
	INT 10h
ENDM

GOTOXY MACRO Y,X
	MOV AH,02
	MOV BH,00
	MOV DH,Y
	MOV DL,X
	INT 10h
ENDM

WRITE MACRO CAD
	MOV AH,09
	MOV DX,OFFSET CAD
	INT 21h
ENDM

READC MACRO VEC
	MOV SI,OFFSET VEC
	MOV AL,255
	MOV [SI],AL
	MOV AH,0AH
	MOV DX,SI
	INT 21H
ENDM

TEXTCOL MACRO VEC,X
	MOV AH,09
	MOV AL,OFFSET VEC
	MOV BH,00
	MOV BL,X
	MOV BX,0001
	INT 10h
ENDM


